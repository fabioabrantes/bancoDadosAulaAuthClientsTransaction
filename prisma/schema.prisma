generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id   String @id @default(uuid())
  cpf  String @unique
  name String
  username String @unique
  password String

  latitude Decimal
  longitude Decimal
  transactions Transaction[]

  @@map("clients")
}

model Transaction {
  id        String   @id @default(uuid())
  type      String
  amount    Float
  createdAt DateTime @default(now())

  client   Client? @relation(fields: [clientId], references: [id])
  clientId String?

  @@map("transctions")
}
